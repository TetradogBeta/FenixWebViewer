<Window x:Class="CheckFenix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckFenix"
        mc:Ignorable="d"
        Height="450" Width="800" KeyDown="Window_KeyDown" Closing="Window_Closing" >
    <TabControl x:Name="tbMain" SelectionChanged="tbMain_SelectionChanged">
        <TabItem Header="Capitulos Actuales">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <local:VisorCapitulos x:Name="visorCapitulosActuales" TotalPage="100"/>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Series Actuales">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <local:VisorSeries x:Name="visorSeriesActuales" KeyDown="Window_KeyDown" TotalPage="50"/>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Todas las Series">
            <local:VisorSeries x:Name="visorTodasLasSeries"  KeyDown="Window_KeyDown" />
        </TabItem>
    </TabControl>
</Window>
